    "version": "0.2.0",
    "configurations": [
         {
            "type": "cppvsdbg",
            "request": "launch",
            "name": "Run (volume.exe)",
            "program": "${workspaceFolder}/build/volume.exe",
            "preLaunchTask": "build",
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}"
        },  
        {
            "type": "cppvsdbg",
            "request": "launch",
            "name": "Debug (volume_debug.exe)",
            "program": "${workspaceFolder}/build/volume_debug.exe",
            "preLaunchTask": "build debug",
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}"
        }
    ]
}